<html>
	<head>
		<title>Playsmid: Level {{level.level}}</title>
		<link 	rel="stylesheet" type="text/css" href="/style.css">
		<link 	href="https://fonts.googleapis.com/css?family=Raleway:500,700,800" rel="stylesheet">
		<script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="   crossorigin="anonymous"></script>
		<script>
			var level = JSON.parse("{{level_string}}".replace(/\r?\n|\r/g,"").replace(/&quot;/g,'"').replace(/&lt;br&gt/g, '<br>'));
			console.log(level);
		</script>
		<script type="text/javascript" src="/script.js"></script>
	</head>
	<body>

		<div class="petri">
			<img src="/SVGs/Art/OutBaseStatic.svg">
		</div>

		<div class="smear">
			<img id="smear" src="/SVGs/Art/Smear1Wild.svg">
		</div>

		<div class="scientist">
			<img src="/SVGs/Art/Scientist.svg">
		</div>

		<div class="thought">
			<img src="/SVGs/Art/InputBaseStatic.svg">
		</div>

		<div class="plasmid">
			<img src="/SVGs/Art/PlasmidBase.svg">
		</div>

		<div class="bottomSlot">
			<img id="bottomSlot" src="/SVGs/Items and Slots/InputSlotHorizontal.svg">
		</div>

		<div class="topSlot">
			<img id="topSlot" src="/SVGs/Items and Slots/InputSlotHorizontal.svg">
		</div>

		<div class="leftSlot">
			<img id="leftSlot" src="/SVGs/Items and Slots/InputSlotHorizontal.svg">
		</div>

		<div class="rightSlot">
			<img id="rightSlot" src="/SVGs/Items and Slots/InputSlotHorizontal.svg">
		</div>

		<div class="benchExtra">
			<img src="/SVGs/Art/BenchArtStatic.svg">
		</div>

		<div class="hints">
			<h3>Level: {{level.level}} </h3>
			<p>{{level.instructions}}</p>
			<button id="next"><p>Next Level</p></button>

		</div>

		<footer>
			<div class="tools">
				<h2>TOOLS</h2>

					<div class="promoTool">
						<div>
							<p>{{level.molecules.0.name}} </p>
						</div>
						<div>
							<img src="/SVGs/Items and Slots/InputPromoterHorizontal.svg">
						</div>
					</div>
					<div class="promoTool">
						<div>
							<p>{{level.molecules.1.name}} </p>
						</div>
						<div>
							<img src="/SVGs/Items and Slots/InputPromoterHorizontal.svg">
						</div>
					</div>
					<div class="promoTool">
						<div>
							<p>{{level.molecules.2.name}} </p>
						</div>
						<div>
							<img src="/SVGs/Items and Slots/InputPromoterHorizontal.svg">
						</div>
					</div>
					<div class="geneTool">
						<p>{{level.markers.0.name}}</p>
					</div>
					<div class="geneTool">
						<p>{{level.markers.1.name}}</p>
					</div>
					<div class="geneTool">
						<p>{{level.markers.2.name}}</p>
					</div>

					<div class="markerTool">
						<p>{{level.genes.0.gene}}</p>
					</div>
					<div class="markerTool" id="blue">
						<p>{{level.genes.1.gene}}</p>
					</div>
					<div class="markerTool" id="yellow">
						<p>{{level.genes.2.gene}}</p>
					</div>
					<div>
						<button id="transform"><p>transform</p></button>
					</div>
			</div>
		</footer>

	</body>
</html>
